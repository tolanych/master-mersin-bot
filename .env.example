# Telegram Bot
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
ADMIN_IDS=123456789,987654321

# Render Webhook
WEBHOOK_URL=https://yourbot.onrender.com
PORT=8000
PAYMENT_IBAN=TR00 0000 0000 0000 0000 0000 00
PAYMENT_RECIPIENT=MASTER MERSIN
MODERATOR_USERNAME=@moderator

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/mersin_bot

# Postgres (Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mersin_bot

# Google Sheets (service account JSON)
SHEETS_ID=YOUR_GOOGLE_SHEET_ID
SHEETS_CREDS={"type": "service_account", "project_id": "...", ...}

# Feature flags
ENABLE_PAYMENTS=false
ENABLE_PREMIUM=false
ENABLE_CHAT=false

# Logging
LOG_LEVEL=INFO

# Local development (use polling instead of webhook)
USE_POLLING=false
